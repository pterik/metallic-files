begin
try
QUSettings.Close;
QUSettings.ParamByName('ST_NAME').AsString:=ANSIUpperCase(Name);
QUSettings.ParamByName('ST_VALUE').AsString:=ANSIUpperCase(Value);
QUSettings.ExecSQL;
except on E:Exception do
