QIPhoneCompany.ParamByName('PC_DATEUPDATE').AsDate:=StrToDate(SDT);
QIPhoneCompany.ExecSQL;
except on E:Exception do
	begin
	Result:=false;
	exit;
	end;
end;
Result:=true;
end;

